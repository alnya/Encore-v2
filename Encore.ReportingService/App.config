<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <appSettings>
    <!-- Service Settings -->
    <add key="Report.PollIntervalMs" value="60000"/>
    <add key="Report.DeleteAfterDays" value="30"/>
    <add key="DefaultFrom" value="service@encore.com"/>

    <!-- Application Settings -->
    <add key="ServiceUrl" value="http://localhost:8080"/>
    <add key="ConnectionString" value="mongodb://localhost"/>
    <add key="SMTPServer" value=""/>
    <add key="PoolParty.EncoreUrl" value="http://onto.nerc.ac.uk/PoolParty/sparql/encore"/>
    <add key="PoolParty.UserName" value="rorywilson"/>
    <add key="PoolParty.Password" value="meIh2sRU2XFD"/>
  </appSettings>

  <log4net>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level: %message%newline"/>
      </layout>
    </appender>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logs\EncoreTaskService.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline"/>
      </layout>
    </appender>

    <root>
      <level value="INFO"/>
      <appender-ref ref="RollingFileAppender"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
  </log4net>

  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="encoreSoap" closeTimeout="00:01:00" openTimeout="00:01:00" receiveTimeout="00:10:00" sendTimeout="00:05:00" allowCookies="false" bypassProxyOnLocal="false" maxBufferPoolSize="524288" maxReceivedMessageSize="2147483647" useDefaultWebProxy="true"/>
      </basicHttpBinding>
      <customBinding>
        <binding name="encoreSoap12">
          <textMessageEncoding messageVersion="Soap12"/>
          <httpTransport/>
        </binding>
      </customBinding>
    </bindings>
    <client>
      <endpoint address="http://neudev.ceh.ac.uk/encore/encore.asmx" binding="basicHttpBinding" bindingConfiguration="encoreSoap" contract="Encore.WebServices.encoreSoap" name="encoreSoap"/>
      <endpoint address="http://neudev.ceh.ac.uk/encore/encore.asmx" binding="customBinding" bindingConfiguration="encoreSoap12" contract="Encore.WebServices.encoreSoap" name="encoreSoap12"/>
    </client>
  </system.serviceModel>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
